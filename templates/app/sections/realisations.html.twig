<section class="my-5 bg-white p-4 shadow-sm rounded d-print-none">
    <div class="border-bottom mb-4">
        <h2 class="h-underline h4">Mes projets persos</h2>
    </div>
    <div class="alert alert-warning mb-4">
        <p class="mb-0"><b>Disclaimer ! </b><br>Atteint de la maladie du dev qui ne finit ou ne maintient jamais complètement ses projets, certains sont abandonnés, buggés, etc. </p>
    </div>
    {% for realisation in resume.realisations %}
        <div class="row g-4">
            <div class="d-none d-md-block col-md-4">
                <a href="{{ realisation.url }}" target="_blank"><img class="img-fluid img-thumbnail" src="https://www.apercite.fr/api/apercite/320x240/non/{{ realisation.url }}" alt="{{ realisation.title }}"></a>
            </div>
            <div class="col-md-8">
                <i class="text-body-secondary float-end">{{ realisation.startedAt | format_datetime('none', 'none', 'MMMM yyyy', locale='fr') }}</i>
                <h4 class="h-secondary">{{ realisation.title }}</h4>
                <div class="mb-3"><a href="{{ realisation.url }}" target="_blank">{{ realisation.urlLabel | default(realisation.url) }}</a></div>
                {{ realisation.description | raw }}
            </div>
        </div>
        {% if not loop.last %}
            <hr class="my-4">
        {% endif %}
    {% endfor %}
</section>
