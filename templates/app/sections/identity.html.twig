<section class="my-5 bg-white p-4 shadow-sm rounded">
    <div class="row g-4">
        <div class="col-md-7 col-lg-8">
            <div class="d-flex align-items-start">
                <img itemprop="image" class="img-thumbnail me-3" src="{{ asset(resume.photo) }}?v=3" width="133" alt="{{ resume.name }}" />
                <div class="flex-grow-1">
                    <h1 itemprop="name" class="h2 text-uppercase">{{ resume.name }}</h1>
                    <h2 class="h4 text-primary"><span itemprop="jobTitle">{{ resume.jobTitle }}</span></h2>
                    <div class="d-print-none">
                        <hr>
                        {% if resume.status %}
                            {% if resume.statusType.available %}
                                <span class="btn btn-success"><i class="fas fa-fire"></i> {{ resume.status }}</span>
                            {% else %}
                                <span class="btn btn-danger"><i class="fas fa-ban"></i> {{ resume.status }}</span>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-lg-4">
            <div class="bg-card rounded text-end text-white p-1 h-100">
                <div class="border rounded border-white p-2 h-100 d-flex flex-column" style="border-style: dashed!important;">
                    <address itemprop="address" itemscope itemtype="http://schema.org/PostalAddress" class="mb-1">
                        <i class="fas fa-map-marker-alt"></i> <span itemprop="addressLocality">{{ resume.getCity() }}</span>
                    </address>
                    <div class="mb-1"><i class="fas fa-at"></i> {{ resume.email }}</div>
                    <div class="mb-2"><i class="fas fa-link"></i> <a itemprop="url" class="link-primary" href="{{ path('home') }}">https://www.jonathan-plantey.fr</a></div>
                    <div class="d-print-none">
{#                        <i class="fas fa-signal"></i> <span itemprop="birthDate" content="{{ resume.birthdate | date('Y-m-d') }}">{{ resume.age.y }} ans</span>#}
                        <ul class="list-inline mb-0">
                            {% for network in resume.networks %}
                                <li class="list-inline-item px-1"><a class="link-primary" href="{{ network.url }}" target="_blank" title="{{ network.name }}"><i class="{{ network.iconClass }}"></i></a></li>
                            {% endfor %}
                        </ul>
                        <span class="d-none d-print-inline-block"><i class="fab fa-github-alt"></i> https://github.com/johndodev</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
